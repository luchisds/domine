body
	background-image url('../img/background.jpg')
	background-repeat no-repeat
	// background-attachment fixed
	background-position 50% 40%
	background-size 240% auto
	margin 0
	padding 0

a
	text-decoration none

h1, h2, h3, h4, h5, h6
	margin 0

p
	margin 0

ul
	margin 0
	padding 0
	li
		list-style none

#container
	background-color grey-bkg
	padding 1em
	position relative


/* ==== HEADER ====================== */

#top-content
	margin 2em 0 1.2em 0
	div
		display inline-block
		&:nth-child(2)
			color green-light
			float right
			text-align center
	img
		//Fix img inline
		vertical-align middle

.facebook
	position absolute
	top 0
	right 1em

.logo
	color grey
	img
		display inline-block
		vertical-align bottom
	p
		display inline-block
		margin-bottom .5em
		vertical-align bottom
		text-align center
		span
			display block


/* ==== NAV ====================== */

nav
	background-color green-light
	border-radius .5em
	margin-top 1em
	padding .3em
	ul
		li
			display inline-block
			text-align center
			width (100% / 6)
			position relative
			//Fix line-height
			margin-top .5em
			a
				color white
			//Submenu
			ul
				display none
				position absolute
				left 0
				top 100%
				li
					display block
					margin 0
					text-align left
					width 120%
					a
						display block
						//Fix line-height with margin-top grater than margin-bottom
						padding 5% 5% 2% 5%
					&:nth-child(1)
						background-color green-nav-1
					&:nth-child(2)
						background-color green-nav-2
					&:nth-child(3)
						background-color green-nav-3
					&:nth-child(4)
						background-color green-nav-4
			&:hover
				ul
					display block


/* ==== CONTENT ====================== */

.content
	background-color rgba(245, 245, 246, .8)


/* ==== FOOTER ====================== */

#about
	margin-top 5em
	text-align center
	p > span
		border-top 1px solid black
		padding-top .5em

.recommendations
	background-color green-light-bkg
	margin-top 2em
	padding 1em
	div
		display inline-block
		vertical-align middle
	#logo2
		text-align right
		width 20%
		img
			//Fix img inline
			vertical-align middle
	#messages
		color white
		text-align center
		width 60%
		p
			line-height 1em
	#news
		text-align left
		width 20%
		div
			background-color white
			border-radius .7em
			color green-light
			text-align center
			padding .5em
			width 100px
			span
				display block
				&:nth-child(2)
					//Fix line-height
					margin-top -1.2em

.slider
	background-color green-light
	color green-dark
	margin-top 1em
	padding .7em
	text-align center
	div
		display inline-block
		vertical-align middle
		&:nth-child(2)
			margin 0 .4em
			p
				line-height .9em
		&:nth-child(3)
			transform rotate(180deg)
	img
		//Fix img inline
		vertical-align middle


/* ==== CONTENT ====================== */

.content
	margin-top 1.5em
	padding 2em


/* ==== ESCUELA ====================== */

.two-col
	display inline-block
	padding 0 5%
	vertical-align middle
	width 40%
	.logo
		margin-bottom 1em
		span
			color green-dark
			display block
			text-align center
	.name
		display block
	.portrait
		border-radius 50%
		& + p
			margin-top 1em
			span:nth-child(1)
				display block
	&:nth-child(2)
		text-align center


/* ==== CAPACITACIONES ====================== */

.training
	.copy
		color grey
		margin -.4em 0 .8em 0
	.title, .subtitle
		color green-dark
	.subtitle
		margin 1em 0 .5em 0
	article
		margin-top 3em
		&:nth-child(1)
			margin 0
		&:nth-child(2)
			p
				&:nth-child(1)
					color grey
				&:nth-child(2)
					margin-top 1em
					span
						display block
				&:nth-child(3)
					margin-top 1.5em
					text-align center
					img
						//Fix img inline
						vertical-align middle
						&:nth-child(2)
							margin-left -3em
		&:nth-child(3)
			div
				display inline-block
				vertical-align bottom
				&:nth-child(2)
					width 65%
				&:nth-child(3)
					border-bottom 2px solid white
					padding-left 5%
					img
						//Fix img inline
						vertical-align middle
			h3
				margin-bottom 1em
		&:nth-child(4)
			// div
			// 	&:not(:nth-child(1))
			// 		display inline-block
			// 	&:nth-child(3)
			// 		width 50%
			img
				border-top 2px solid white
				border-bottom 2px solid white
				float left
				margin 0 3% 1em 0
			h3
				margin 2em 0 1em 0
	li
		list-style-type square
		list-style-position inside