body
	background-image url('../img/background.jpg')
	background-repeat no-repeat
	// background-attachment fixed
	background-position 50% 40%
	background-size 240% auto
	margin 0
	padding 0

a
	text-decoration none

h1
	margin 0

p
	margin 0

ul
	margin 0
	padding 0
	li
		list-style none

#container
	background-color grey-bkg
	padding 1em
	position relative


/* ==== HEADER ====================== */

#top-content
	margin 2em 0 1.2em 0
	div
		display inline-block
		&:nth-child(2)
			color green-light
			float right
			text-align center
	img
		//Fix img inline
		vertical-align middle

.facebook
	position absolute
	top 0
	right 1em

.logo
	color grey
	img
		display inline-block
		vertical-align bottom
	p
		display inline-block
		margin-bottom .5em
		vertical-align bottom
		text-align center
		span
			display block


/* ==== NAV ====================== */

nav
	background-color green-light
	border-radius .5em
	margin-top 1em
	padding .3em
	ul
		li
			display inline-block
			text-align center
			width (100% / 6)
			//Fix line-height
			margin-top .5em
			a
				color white


/* ==== CONTENT ====================== */

.content
	background-color rgba(245, 245, 246, .8)


/* ==== FOOTER ====================== */

#about
	margin-top 5em
	text-align center
	p > span
		border-top 1px solid black
		padding-top .5em

.recommendations
	background-color green-light-bkg
	margin-top 2em
	padding 1em
	div
		display inline-block
		vertical-align middle
	#logo2
		text-align right
		width 20%
		img
			//Fix img inline
			vertical-align middle
	#messages
		color white
		text-align center
		width 60%
		p
			line-height 1em
	#news
		text-align left
		width 20%
		div
			background-color white
			border-radius .7em
			color green-light
			text-align center
			padding .5em
			width 100px
			span
				display block
				&:nth-child(2)
					//Fix line-height
					margin-top -1.2em

.slider
	color green-dark
	background-color green-light
	margin-top 1em
	padding .7em
	text-align center
	div
		display inline-block
		vertical-align middle
		&:nth-child(2)
			margin 0 .4em
			p
				line-height .9em
		&:nth-child(3)
			transform rotate(180deg)
	img
		//Fix img inline
		vertical-align middle